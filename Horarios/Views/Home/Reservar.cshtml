@{
    ViewData["Title"] = "Reservaciones";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<header style="text-align: center; margin-top: 20px;">
    <h1 style="font-family: Arial, sans-serif; color: #2c3e50;">Reservaciones</h1>
</header>

<main style="max-width: 800px; margin: 20px auto; padding: 20px; font-family: Arial, sans-serif;">
    <p style="font-size: 18px; line-height: 1.6; color: #34495e;">
        Para reservar tu próximo viaje, contáctanos:
    </p>

    <ul style="list-style-type: none; padding: 0;">
        <li style="margin: 10px 0;">
            <i class="fab fa-whatsapp" style="color: #25d366; font-size: 20px; margin-right: 10px;"></i>
            <a href="#" onclick="showWhatsAppAlert()" style="text-decoration: none; color: #34495e; font-size: 18px;">+506 1234 5678</a>
        </li>
        <li style="margin: 10px 0;">
            <i class="far fa-envelope" style="color: #34495e; font-size: 20px; margin-right: 10px;"></i>
            <a href="#" onclick="showEmailAlert()" style="text-decoration: none; color: #34495e; font-size: 18px;">reservas@pumapardo.com</a>
        </li>
        <li style="margin: 10px 0;">
            <i class="fab fa-facebook" style="color: #3b5998; font-size: 20px; margin-right: 10px;"></i>
            <a href="https://www.facebook.com/profile.php?id=100057597035132" target="_blank" style="text-decoration: none; color: #34495e; font-size: 18px;">Facebook</a>
        </li>
    </ul>

    <p style="font-size: 16px; color: #7f8c8d;">Horario de atención: Lunes a Viernes, 8:00 AM - 6:00 PM</p>

    <img src="/wwwroot/images/reservar.jpg" alt="Imagen de reservaciones"
         style="width: 100%; max-width: 600px; margin: 20px 0; border-radius: 10px; display: block; margin-left: auto; margin-right: auto;">

    <p style="font-size: 16px; color: #34495e;">También puedes visitar nuestras oficinas ubicadas en el centro de la ciudad.</p>
</main>

<footer style="text-align: center; padding: 10px 0; background: #2c3e50; color: white; font-family: Arial, sans-serif; margin-top: 20px;">
    <p>&copy; 2024 Puma Pardo. Todos los derechos reservados.</p>
</footer>

<script>
    function showWhatsAppAlert() {
        Swal.fire({
            icon: 'info',
            title: 'Contáctanos por WhatsApp',
            text: '+506 1234 5678',
            confirmButtonText: '¡Abrir WhatsApp!',
            confirmButtonColor: '#25d366',
            showCancelButton: true,
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.open('https://wa.me/50612345678', '_blank');
            }
        });
    }

    function showEmailAlert() {
        Swal.fire({
            icon: 'info',
            title: 'Enviar correo',
            text: 'reservas@pumapardo.com',
            confirmButtonText: 'Abrir Correo',
            confirmButtonColor: '#34495e',
            showCancelButton: true,
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = 'mailto:reservas@pumapardo.com';
            }
        });
    }
</script>
